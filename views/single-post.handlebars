<article class="post">
  <div class="title">
    <a target="_blank">{{post.fweet}}</a>
  </div>
  <div class="meta">
    {{post.like_count}}
    point(s) by
    {{post.user.username}}
    on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>

{{#if loggedIn}}
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
      <button type="button" class="upvote-btn">like</button>
    </div>
  </form>
  {{/if}}

  <div class="comments">
    {{#each post.comments}}
      <section class="comment">
        <div class="meta">
          {{user.username}}
          on
          {{created_at}}
        </div>
        <div class="text">
          {{comment_text}}
        </div>
      </section>
    {{/each}}
  </div>

</article>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/like.js"></script>
{{/if}}