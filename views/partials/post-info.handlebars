  <article class="post">
      <div class="title">
        <a target="_blank">{{fweet}}</a>
      </div>
      <div class="meta">
        {{like_count}} {{format_plural "point" like_count}} by {{user.username}} on
        {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
      </div>
    </article>